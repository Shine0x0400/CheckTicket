<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zjl.checkticket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CheckTicketApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CheckTicketActivity" />
        <activity
            android:name=".setting.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.zjl.checkticket.CheckTicketActivity" />
        <activity
            android:name=".DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:parentActivityName=".CheckTicketActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zjl.checkticket.CheckTicketActivity" />
        </activity>
    </application>

</manifest>